<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gif_nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="will.shiro.giphy.gifs.home.GifHomeFragment"
        android:label="Home">

        <action
            android:id="@+id/homeToDetails"
            app:destination="@id/details" />
    </fragment>


    <fragment
        android:id="@+id/details"
        android:name="will.shiro.giphy.gifs.details.GifDetailsFragment"
        android:label="Details">

        <argument android:name="gif" app:argType="will.shiro.giphy.gifs.home.models.UIGifHomeModel" />
    </fragment>
</navigation>